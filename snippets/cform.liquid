
<script>
var max_fields      = 10; //maximum input boxes allowed
var wrapper   		= document.querySelector(".input_fields_wrap"); //Fields wrapper
var add_button      = document.querySelector(".add_field_button"); //Add button ID

var x = 1; //initlal text box count
document.querySelector(add_button).click(function(e){ //on add input button click
e.preventDefault();
    if(x < max_fields){ //max input box allowed
        x++; //text box increment
        document.querySelector(wrapper).insertAdjacentHTML("beforeend",'<div class="input-group mb-3"><input placeholder="Enter Price" type="text" name="mytext[]" class="form-control"><div class="input-group-append"><button class="btn btn-outline-danger remove_field" type="button">Remove</button></div></div>'); //add input box
    }
});

document.querySelector(wrapper).addEventListener("click",".remove_field", function(e){ //user click on remove text
    e.preventDefault(); document.querySelector(this).parent('div').parent('div').remove(); x--;
    })
});
